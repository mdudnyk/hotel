<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC datasource -->

    <Resource name="jdbc/hotel_db"
              auth="Container"
              type="javax.sql.DataSource"
              username="root"
              password="password"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/hotel_db"
              initialSize="1"
              maxActive="10"
              maxIdle="4"/>
</Context>